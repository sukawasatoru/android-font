<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/default_label"
        android:layout_width="@dimen/label_width"
        android:layout_height="0dp"
        android:text="DEFAULT"
        app:layout_constraintBaseline_toBaselineOf="@+id/default_text"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/default_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/text"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/default_label"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/serif_label"
        android:layout_width="@dimen/label_width"
        android:layout_height="@dimen/label_height"
        android:text="NotoSerifCJKjp Regular"
        app:layout_constraintBaseline_toBaselineOf="@+id/serif_text"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/serif_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/text"
        android:fontFamily="@font/notoserifcjkjp"
        app:layout_constraintTop_toBottomOf="@id/default_label"
        app:layout_constraintStart_toEndOf="@id/serif_label"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/serif_bold_label"
        android:layout_width="@dimen/label_width"
        android:layout_height="0dp"
        android:text="NotoSerifCJKjp Bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/serif_bold_text"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/serif_bold_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/text"
        android:textStyle="bold"
        android:fontFamily="@font/notoserifcjkjp"
        app:layout_constraintTop_toBottomOf="@id/serif_text"
        app:layout_constraintStart_toEndOf="@id/serif_bold_label"
        app:layout_constraintEnd_toEndOf="parent" />
</android.support.constraint.ConstraintLayout>
